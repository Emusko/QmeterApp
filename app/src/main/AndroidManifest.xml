<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paydaychallenge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentation.monthly_expense.MonthlyExpenseActivity"/>
        <activity android:name=".presentation.accounts.AccountListActivity"/>
        <activity android:name=".presentation.transactions.TransactionListActivity" />
        <activity android:name=".presentation.main.MainActivity" />
        <activity android:name=".presentation.authentication.AuthenticateActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>